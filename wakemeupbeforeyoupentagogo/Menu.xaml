<Page x:Class="Pentago.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pentago"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="263.560"
      Title="Menu">

    <Grid Background="Transparent">
        <StackPanel>
            <Button Style="{StaticResource RoundButtonTemplate}" Content="versus Human"  Margin="12" Click="PlayerButton_Click" Background="#FF8A8888" Foreground="#FF060606"/>
            <Button Style="{StaticResource RoundButtonTemplate}" Content="versus Computer" Click="PlayerButton_Click" Background="#FF8A8888" Foreground="#FF060606"/>
            <Button Style="{StaticResource RoundButtonTemplate}" Content="Exit"  Margin="12" Click="Exit_Click" Background="#FF8A8888" Foreground="#FF060606"/>
        </StackPanel>

    </Grid>
</Page>
