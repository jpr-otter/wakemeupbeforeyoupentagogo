        <Button Style="{StaticResource ArrowTemplate}" x:Name="ButtonArrow3N" Background="Transparent" Margin="-3,410,723,114" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="270"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Image Source="/assets/arrowMirror.png"/>
        </Button>

    </Grid>
</Window>
