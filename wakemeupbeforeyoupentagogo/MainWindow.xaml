<Window x:Class="Pentago.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pentago"
        mc:Ignorable="d"
        Title="Pentago" ResizeMode="CanMinimize" Height="600" Width="800">
    <Window.Background>
        <ImageBrush  Stretch="Fill" ImageSource="/assets/background.jpg" />
    </Window.Background>
    <Window.Resources>

        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" x:Key="ArrowTemplate">
            <EventSetter Event="Click" Handler="ButtonArrow_Click"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Frame x:Name="MenuFrame" Margin="514,10,10,10" NavigationUIVisibility="Hidden"/>
        <Image Source="/assets/grid.png" Width="400" Height="400" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60 60 10 10"/>

