        <Button Style="{StaticResource ArrowTemplate}" x:Name="ButtonArrow1C" Background="Transparent" Margin="-4,115,723,409" RenderTransformOrigin="0.5,0.5"  Width="81" Height="60">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Image Source="/assets/arrow.png"/>
        </Button>

        <Button Style="{StaticResource ArrowTemplate}" x:Name="ButtonArrow1N" Background="Transparent" Margin="102,7,618,517">
            <Image Source="/assets/arrowMirror.png"/>
        </Button>

        <Button Style="{StaticResource ArrowTemplate}" x:Name="ButtonArrow2C" Background="Transparent" Margin="338,7,382,517">
            <Image Source="/assets/arrow.png" />
        </Button>


        <Button Style="{StaticResource ArrowTemplate}" x:Name="ButtonArrow3C" Background="Transparent" Margin="104,458,616,66">
